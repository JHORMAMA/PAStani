<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pastani.rifqi.pastani.SignInActivity">

    <TextView
        android:id ="@+id/UsernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_alignBaseline="@+id/User"
        android:layout_alignBottom="@+id/User"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <EditText
        android:id="@+id/User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Pass" />

    <TextView
        android:id ="@+id/PasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_alignBaseline="@+id/Pass"
        android:layout_alignBottom="@+id/Pass"
        android:layout_alignEnd="@+id/UsernameLabel" />

    <EditText
        android:id="@+id/Pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/User"
        android:layout_alignStart="@+id/SignUpLabel" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pass"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp" />

    <TextView
        android:id ="@+id/SignUpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an Account? Sign Up"
        android:layout_alignBottom="@+id/SignUpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/LoginButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
